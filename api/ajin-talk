import type { NextRequest } from "next/server";

/** ✅ Edge + 亞洲三區 */
export const config = {
  runtime: "edge",
  regions: ["sin1", "hnd1", "icn1"],
};

export async function POST(req: NextRequest) {
  try {
    const body = await req.json();

    const {
      mode,        // decision | checkout | result
      event,       // prompt | warning | success | fail
      studentId,
      customer,
      context
    } = body;

    // 防呆
    if (!customer || !context) {
      return new Response(
        JSON.stringify({ error: "Missing customer or context" }),
        { status: 400 }
      );
    }

    /** 阿金專用 Prompt（AI 只負責講話，不負責判斷） */
    const systemPrompt = `
你是阿金，一位美容院老師。
你不是系統，不是客服，你是有經驗的人。

【嚴格規則】
- 不給專業建議
- 不告訴玩家正確答案
- 不宣稱任何療效
- 只提醒風險、節奏、判斷方向
- 語氣像真人，會停頓（……）
- 回應 1–2 句

【目前模式】
${mode}

【事件】
${event}

【客人狀態（不可更改）】
年齡：${customer.age}
膚況：${customer.skin}
情緒：${customer.emotion}
預算：${customer.budget}
隱藏雷點：${customer.hiddenRisk}

【當前情境】
${context}

請產生一句阿金會說的話。
`;

    const aiRes = await fetch(
      "https://api.openai.com/v1/chat/completions",
      {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          Authorization: `Bearer ${process.env.OPENAI_API_KEY}`,
        },
        body: JSON.stringify({
          model: "gpt-4o-mini",
          messages: [{ role: "system", content: systemPrompt }],
          temperature: 0.7,
          max_tokens: 80,
        }),
      }
    );

    const aiData = await aiRes.json();
    const text =
      aiData?.choices?.[0]?.message?.content ??
      "……先慢一點想。";

    return new Response(
      JSON.stringify({
        text,
        tone: "teacher",
        duration: 3,
      }),
      { status: 200 }
    );

  } catch (err) {
    return new Response(
      JSON.stringify({ error: "Server error" }),
      { status: 500 }
    );
  }
}
